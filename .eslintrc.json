{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"comma-spacing": ["error", { "before": false, "after": true }],
		"arrow-spacing": ["error", { "before": true, "after": true }],
		"quotes": ["error", "single"],
		"semi": ["error", "never"],
		"no-unused-vars": "off"
	},
	"ignorePatterns": ["__tests__/**/*.test.js"]
}
