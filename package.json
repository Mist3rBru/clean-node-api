{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "Building an API Rest on NodeJS using TDD, Clean Architecture and Design Patterns",
  "author": "Bruno Rocha",
  "license": "MIT",
  "main": "src/main/index.js",
  "scripts": {
    "start": "node src/main/server.js",
    "dev": "nodemon src/main/server.js",
    "test": "jest --colors --noStackTrace --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:int": "npm test -- --watch -c jest-integration-config.js",
    "test:cover": "npm test -- --coverage --silent"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.3",
    "fast-glob": "^3.2.11",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.3",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "eslint": "^8.10.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2"
  }
}
